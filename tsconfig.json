{
  "$schema": "https://json.schemastore.org/tsconfig",

  "exclude": ["node_modules/*", "**/*.test.js", "./test/**", "./dist/**", "./build-test/**"],

  "compilerOptions": {
    "strict": true,
    "sourceMap": true,

    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": false,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,

    "rootDir": "./src",
    "allowJs": true,

    "outDir": "./dist",
    "lib": ["ES2018"],
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
